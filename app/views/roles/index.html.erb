<%- model_class = Role -%>
<div class="page-header" style="width: 100%; overflow: hidden;">
  <div id="title" style="width: 300px; float: left;"><h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1></div>
  <div :id="search" style="margin-left: 300px;"><%= render :partial => 'search' %></div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= sortable 'id' %></th>
      <th><%= sortable 'title' %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.id %></td>
        <td><%= link_to role.title, role_path(role) %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_role_path(role), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      role_path(role),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_role_path,
            :class => 'btn btn-primary' %>
