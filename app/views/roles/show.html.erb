<%- model_class = Role -%>
<div class="page-header">
    <h4><%=t '.title', :default => t('helpers.titles.new', :model => model_class.model_name.human,
                                   :default => "#{model_class.model_name.human} info") %></h4>
 
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:role) %>:</strong></dt>
  <dd><%= @role.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:employees) %>:</strong></dt>
  <dd>	
	<% @employees = @role.employees %>
	<% @employees.each do |employee| %>
	<%= link_to employee.name, employee_path(employee) %><br/>
	<% end %>
</dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              roles_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_role_path(@role), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              role_path(@role),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
