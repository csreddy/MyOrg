<%- model_class = Department -%>
<div class="page-header">
    <h4><%=t '.title', :default => t('helpers.titles.edit', :model => model_class.model_name.human,
                                     :default => "#{model_class.model_name.human} info") %></h4>
  
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @department.name %></dd>
</dl>
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:employees) %>:</strong></dt>
  <% @employees = @department.employees %>
  <% @employees.each do |employee| %>
  <dd><%= link_to employee.name, employee_path(employee) %></dd>
  <% end %>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              departments_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_department_path(@department), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              department_path(@department),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
