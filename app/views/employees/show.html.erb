<%- model_class = Employee -%>

<div class="page-header">
	<h4><%=t '.title', :default => t('helpers.titles.edit', :model => model_class.model_name.human, :default => "#{model_class.model_name.human} info") %></h4>
</div>

<table class="profile" summary="Profile information">
	  <col width="25%" />
  <tr>
    <td class="main" valign="top">
		<%= image_tag avatar_url_show_page(@employee), :class => 'img-polaroid' %>
		<!-- <%= image_tag @employee.gravatar_url %>
		<%= image_tag @employee.avatar.url %> -->
        <h4 align="left">
			<%= @employee.name %>
        </h4>
    </td>
    <td class="sidebar round">
	  <dl class="dl-horizontal">
	    <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
	    <dd><%= @employee.name %></dd>
		<dl class="dl-horizontal">
  	  <dt><strong><%= model_class.human_attribute_name(:bio) %>:</strong></dt>
  	   <dd><%= @employee.bio %></dd>
   </dl>
  <dl class="dl-horizontal">
	  <dt><strong><%= model_class.human_attribute_name(:date_of_birth) %>:</strong></dt>
   <dd><%= dob_date %></dd>
</dl>
  <dl class="dl-horizontal">
	  <dt><strong><%= model_class.human_attribute_name(:joined_on) %>:</strong></dt>
   <dd><%= joined_on_date %></dd>
</dl>
   
   <dl class="dl-horizontal">
   	  <dt><strong><%= model_class.human_attribute_name(:department) %>:</strong></dt>
   	   <dd><%= employee_department(@employee) %></dd>
   </dl>
	   <dl class="dl-horizontal">
	    <dt><strong><%= model_class.human_attribute_name(:role) %>:</strong></dt>
	    <dd>
	  	<% @roles = @employee.roles %>
	  	<% @roles.each do |role| %>
	  	<%= link_to role.title, role_path(role) %><br />
	  	<% end %>
	  </dd>
  </dl>
	  <dl class="dl-horizontal">
	  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
	   <dd><%= mail_to @employee.email %></dd>
   </dl>
	   <dl class="dl-horizontal">
 	  <dt><strong><%= model_class.human_attribute_name(:reports_to) %>:</strong></dt>
	  <% @manager = @employee.employees %>
	     <% @manager.each do |m| %>
	    <dd> <%= link_to m.name, employee_path(m) %></dd>
	    <% end %>
	  </dl>
   <dl class="dl-horizontal">
	  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
	 <dd> <%= employee_address(@employee) %></dd>	  
  </dl> 
  <dl class="dl-horizontal">
 <dt><strong><%= model_class.human_attribute_name(:phones) %>:</strong></dt>
 <% @phones = @employee.phones %>
    <% @phones.each do |p| %>
   <dd><%= p.phone_number %> <small>(<%= p.phone_type %>)</small></dd>
   <% end %>
 </dl>
    </td>
  </tr>
</table>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              employees_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_employee_path(@employee), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              employee_path(@employee),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
